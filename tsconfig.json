{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2022"],
    "target": "es6",
    "outDir": "./build",
    "moduleResolution": "node",
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["./src/**/*", "./types/**/*"],
  "exclude": ["./public/**/*", "./src/s?ss/**/*"]
}
